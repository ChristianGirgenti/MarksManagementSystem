@page
@model MarksManagementSystem.Pages.Courses.EditCourseModel
@{
    ViewData["Title"] = "Edit Course";
}

<head>
    <link href="/css/editCourse.css" rel="stylesheet" type="text/css" />
</head>

<h1>@ViewData["Title"]</h1>
<hr />

<div>
    <div>
        <form method="post">
          
            <div class="form-group">
            
            <label class="input-label" asp-for="EditCourseViewModel.Name">Name: </label>
            <input class="input-form" asp-for="EditCourseViewModel.Name" />
            <span class="error-message d-block" asp-validation-for="EditCourseViewModel.Name"></span>

            <label class="input-label" asp-for="EditCourseViewModel.Credits">Credits: </label>
            <input class="input-form" asp-for="EditCourseViewModel.Credits" />
            <span class="error-message d-block" asp-validation-for="EditCourseViewModel.Credits"></span>

            <label class="input-label" asp-for="EditCourseViewModel.UnitLeaderId">Unit Leader: </label>
            <select class="input-form" asp-items="Model.OptionsTutors" asp-for="EditCourseViewModel.UnitLeaderId"></select>
            <span class="error-message d-block" asp-validation-for="EditCourseViewModel.UnitLeaderId"></span>

            <div class="other-tutors-components">
                <label class="input-label" asp-for="EditCourseViewModel.TutorIds">Other Tutors:</label>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle other-tutors-button" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown">
                        Select Tutors
                    </button>
                    <div class="dropdown-menu  dropdown-other-tutors-container" aria-labelledby="dropdownMenuButton">
                        <table class="table other-tutors-table">
                            @foreach (var tutor in Model.OtherTutors)
                            {
                                <tr>
                                    <td>
                                        <input id="@tutor.Value" type="checkbox" name="Tutors" value="@tutor.Value" checked="@tutor.Selected" />
                                    </td>
                                    <td>
                                        <label for="@tutor.Value">@tutor.Text</label>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
            <span class="error-message d-block" asp-validation-for="EditCourseViewModel.TutorIds"></span>


            </div>

            <button class="btn btn-success">Update Course</button>
        </form>
    </div>
</div>
